<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Visage.App">
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="VisageDarkColor">#512DA8</Color>
            <Color x:Key="VisageLightColor">#D1C4E9</Color>
            <Color x:Key="VisageAscentColor">#03A9F4</Color>
            <Color x:Key="VisageGray">#3a3f47</Color>

            <Style x:Key="BaseButtonStyle" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            </Style>

            <Style x:Key="PurpleButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="BackgroundColor" Value="{StaticResource VisageDarkColor}" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style x:Key="PurpleTextButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="TextColor" Value="{StaticResource VisageDarkColor}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
