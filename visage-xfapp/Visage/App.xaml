<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Visage.App">
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="VisageDarkColor">#512DA8</Color>
            <Color x:Key="VisageLightColor">#673AB7</Color>
            <Color x:Key="VisageAscentColor">#448AFF</Color>
            <Color x:Key="VisageGrey">#78909c</Color>

            <Style x:Key="BaseButtonStyle" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            </Style>

            <Style x:Key="VisageButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="BackgroundColor" Value="{StaticResource VisageAscentColor}" />
                <Setter Property="TextColor" Value="White" />
            </Style>

            <Style x:Key="VisageTextButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="TextColor" Value="{StaticResource VisageAscentColor}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
