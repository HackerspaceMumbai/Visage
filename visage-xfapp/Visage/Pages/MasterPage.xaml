<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
            xmlns:b="clr-namespace:Visage.Behaviors;assembly:Visage"
            x:Class="Visage.Pages.MasterPage"
            Padding="0,30,0,0"
            Title="Navigation"
            BackgroundColor="{StaticResource VisageGray}"
            Icon="icon_hamburger.png">
    
	<ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <StackLayout x:Name="ProfileSection" 
                         BackgroundColor="{StaticResource VisageDarkColor}"
                         Grid.Row="0"
                         Padding="20">

                <Label Text="Panda" FontAttributes="Bold" TextColor="White" />

                <Label Text="panda@zoo.com" TextColor="White"/>
                
            </StackLayout>
            
            <ListView x:Name="MenuItemsListView" 
                        VerticalOptions="FillAndExpand" 
                        BackgroundColor="Transparent"
                        SeparatorVisibility="None"
                        ItemsSource="{Binding MasterPageItems}"
                        Grid.Row="1"
                        Margin="20, 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" TextColor="White" /> 
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!--<ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemTapped"
                                              Command="{Binding ItemSelectedCommand}" />
                </ListView.Behaviors>-->
                
            </ListView>
        
        </Grid>
        
    </ContentPage.Content>
</ContentPage>
