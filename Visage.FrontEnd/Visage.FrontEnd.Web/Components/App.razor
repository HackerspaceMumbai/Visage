<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="_content/Visage.FrontEnd.Shared/output.css" />
    <link rel="icon" type="image/png" href="_content/Visage.FrontEnd.Shared/favicon.png" />
    <HeadOutlet @rendermode="InteractiveServer"/>
    @if (!string.IsNullOrEmpty(ClarityTrackingId))
    {
        <script type="text/javascript">
            (function(c,l,a,r,i,t,y){
                c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
                t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
                y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
            })(window, document, "clarity", "script", "@ClarityTrackingId");
        </script>
    }
</head>

<body>
    <Routes @rendermode="InteractiveServer"/>
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [Inject] private IClarityService ClarityService { get; set; } = default!;
    
    private string ClarityTrackingId => ClarityService.GetTrackingId();
}
