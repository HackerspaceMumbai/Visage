@page "/create-session"
@using Visage.FrontEnd.Shared.Models
@using Visage.FrontEnd.Shared.Services
@inject IEventService EventService

<h3>Create New Session</h3>

<EditForm Model="@newSession" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <InputText id="name" class="form-control" @bind-Value="newSession.Name" />
    </div>

    <div class="mb-3">
        <label for="type" class="form-label">Type</label>
        <InputText id="type" class="form-control" @bind-Value="newSession.Type" />
    </div>

    <div class="mb-3">
        <label for="speakers" class="form-label">Speakers</label>
        <InputText id="speakers" class="form-control" @bind-Value="newSession.Speakers" />
    </div>

    <button type="submit" class="btn btn-primary">Create Session</button>
</EditForm>

@code {
    private Session newSession = new Session();

    private async Task HandleValidSubmit()
    {
        await EventService.CreateSession(newSession);
        // Redirect to home page or show success message
    }
}
